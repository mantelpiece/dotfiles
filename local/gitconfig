[core]
	excludefile = /home/brendan/.gitignore_global
[user]
	name = Brendan Studds
	email = brendan.studds@gmail.com

[color]
	ui = true
[color "status"]
   branch = red
   added = green
   changed = blue
   untracked = magenta

[alias]
	lgg = !git log -n10 --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s <%ai> %C(bold blue)<%an>%Creset' --abbrev-commit --date=iso
	lggy = !git log -n10 --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s <%ai> %C(bold blue)<%an>%Creset' --abbrev-commit --date=iso
	staged = !git diff --cached
[push]
	default = upstream
[url "https://"]
	insteadOf = git://
#[credential]
  #helper = /usr/share/doc/git/contrib/credential/gnome-keyring/git-credential-gnome-keyring
[fetch]
	prune = true
[diff]
	submodule = log
